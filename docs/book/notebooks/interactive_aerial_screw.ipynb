    "# Import libraries\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display, HTML, clear_output\n",
    "\n",
    "# Aerial screw simulation\n",
    "class AerialScrewSimulation:\n",
    "    @staticmethod\n",
    "    def simulate(rotor_diameter=4.8, pitch_angle=15, rotation_speed=120, air_density=1.225):\n",
    "        \"\"\"Simulate aerial screw performance using momentum theory.\"\"\"\n",
    "        \n",
    "        # Constants\n",
    "        rotor_radius = rotor_diameter / 2\n",
    "        rotor_area = np.pi * rotor_radius**2\n",
    "        \n",
    "        # Convert rotation speed from RPM to rad/s\n",
    "        omega = rotation_speed * 2 * np.pi / 60\n",
    "        \n",
    "        # Tip speed calculation\n",
    "        tip_speed = omega * rotor_radius\n",
    "        \n",
    "        # Simplified momentum theory for vertical velocity\n",
    "        # This is a basic approximation for educational purposes\n",
    "        pitch_rad = np.radians(pitch_angle)\n",
    "        vertical_velocity = tip_speed * np.sin(pitch_rad) * 0.5  # Efficiency factor\n",
    "        \n",
    "        # Thrust calculation (simplified)\n",
    "        thrust = 0.5 * air_density * rotor_area * vertical_velocity**2\n",
    "        \n",
    "        # Power required (simplified)\n",
    "        power_ideal = thrust * vertical_velocity\n",
    "        power_actual = power_ideal / 0.6  # Account for losses\n",
    "        \n",
    "        # Figure of merit (efficiency)\n",
    "        figure_of_merit = power_ideal / power_actual\n",
    "        \n",
    "        # Weight that can be lifted\n",
    "        weight_capacity = thrust / 9.81  # Convert thrust to mass\n",
    "        \n",
    "        return {\n",
    "            'thrust_N': thrust,\n",
    "            'power_required_kW': power_actual / 1000,\n",
    "            'tip_speed_ms': tip_speed,\n",
    "            'vertical_velocity_ms': vertical_velocity,\n",
    "            'weight_capacity_kg': weight_capacity,\n",
    "            'figure_of_merit': figure_of_merit,\n",
    "            'hoverable': weight_capacity > 75  # Assume 75kg pilot + machine\n",
    "        }"
   ]
